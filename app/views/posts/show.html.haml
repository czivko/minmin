.col-md-6.col-md-offset-3
  .panel.panel-default
    .panel-heading
      =link_to @post.title, "posts/#{@post.slug}"
    .panel-body
      = @post.body.html_safe
      .row{style: "padding: 15px 5px 5px 0px;"}
        .col-md-10
          = pretty_tags(@post)
        .col-md-2.text-right
          =@post.published_at.strftime( "%m/%d/%Y") if @post.published_at
      .row
        .col-md-4  
          = link_to 'Edit', edit_post_path(@post) 
          |
          = link_to 'All Posts', posts_path
