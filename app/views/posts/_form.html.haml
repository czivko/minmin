= form_for(@post) do |f|
  - if @post.errors.any?
    #error_explanation
      %h2
        = pluralize(@post.errors.count, "error")
        prohibited this post from being saved:
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :body
    %br/
    = f.text_area :body
  .field
    = f.label :slug
    %br/
    = f.text_field :slug
  .field
    = f.label :post_type
    %br/
    = f.text_field :post_type
  .field
    = f.label :published_at
    %br/
    = f.datetime_select :published_at
  .field
    = f.label :tags
    %br/
    = f.text_field :tags, value: pretty_tags
  .actions
    = f.submit